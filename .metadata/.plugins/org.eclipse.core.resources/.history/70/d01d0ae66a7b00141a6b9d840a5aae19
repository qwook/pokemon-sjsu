//			nextButton.setPreferredSize(new Dimension(0, 50));
//			gbc.gridx = 2;
//			gbc.gridy = 0;
//			gbc.weightx = 0.5;
//			gbc.fill = GridBagConstraints.HORIZONTAL;
//			screen2.add(nextButton, gbc);
			
			content.add(screen2, screenPanel);
